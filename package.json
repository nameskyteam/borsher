{
  "name": "borsher",
  "version": "1.2.1",
  "license": "MIT",
  "description": "Borsh (de)serialization",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rm -rf dist && tsup src --minify --dts",
    "test": "jest",
    "lint": "eslint src/**/*.ts --fix",
    "prettier": "prettier src/**/*.ts --write",
    "prepare": "husky install"
  },
  "dependencies": {
    "borsh": "^2.0.0",
    "buffer": "^6.0.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "eslint": "^8.23.1",
    "husky": "^8.0.2",
    "jest": "^29.7.0",
    "lint-staged": "^13.0.4",
    "prettier": "^2.8.1",
    "ts-jest": "^29.1.2",
    "tsup": "^6.5.0",
    "typescript": "^4.5.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "test/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
